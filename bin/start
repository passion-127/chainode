#!/bin/bash
# Bash script to start peer server

LOGS='DEBUG_NO_SYNC'
PORT=80

while test $# -gt 0; do
        case "$1" in
            --logs)
                shift
                LOGS=$1
                shift
                ;;
            --port)
                shift
                PORT=$1
                shift
                ;;
            *)
                shift
                echo "Invalid argument with value $1."
                shift
                ;;
        esac
done

LOGS=$LOGS PORT=$PORT node app/server.js
